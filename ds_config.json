{
	"train_batch_size": 4,
	"train_micro_batch_size_per_gpu": 1,
	"gradient_accumulation_steps": 4,
	"steps_per_print": 100,
	"bf16": {
		"enabled": true
	},
	"optimizer": {
		"type": "Adam",
		"params": {
			"lr": 3e-6
		}
	},
	"scheduler": {
		"type": "WarmupLR",
		"params": {
			"warmup_min_lr": 5e-05,
			"warmup_max_lr": 1e-04,
			"warmup_num_steps": 2000,
			"warmup_type": "cosine"
		}
	},
	"zero_optimization": {
		"stage": 1,
		"offload_param": {
			"device": "cpu"
		},
		"offload_optimizer": {
			"device": "cpu"
		}
	},
	"pipeline": {
		"enabled": true,
		"stages": 4,
		"partition_method": "parameters",
		"activation_checkpoint_interval": 1
	},
	"gradient_clipping": 1.0,
	"wall_clock_breakdown": false
}
