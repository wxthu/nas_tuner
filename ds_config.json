{
	"train_batch_size": 4,
	"train_micro_batch_size_per_gpu": 1,
	"gradient_accumulation_steps": 1,
	"steps_per_print": 100,
	"fp16": {
		"enabled": true
	},
	"optimizer": {
		"type": "Adam",
		"params": {
			"lr": 3e-5
		}
	},
	"zero_optimization": {
		"stage": 1,
		"offload_param": {
			"device": "cpu"
		},
		"offload_optimizer": {
			"device": "cpu"
		}
	},
	"pipeline": {
		"enabled": true,
		"stages": 4,
		"partition_method": "parameters",
		"activation_checkpoint_interval": 1
	},
	"gradient_clipping": 1.0,
	"wall_clock_breakdown": false
}